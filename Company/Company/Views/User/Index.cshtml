@model IEnumerable<Company.Models.DatabaseModels.AboutEmployees>

<p><a asp-controller="User" asp-action="Create">Добавить пользователя</a></p>
<table class="table">
    <tr><th>Фамилия</th><th>Имя</th><th>Очество</th><th>Телефон</th><th>Улица</th><th>Дом</th><th>Квартира</th> <th></th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.User.Surname</td>
            <td>@item.User.Name</td>
            <td>@item.User.Patronymic</td>
            <td>@item.User.Phone</td>
            <td>@item.Street</td>
            <td>@item.Home</td>
            <td>@item.Apartment</td>
            <td>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Изменить</a>
            </td>
            <td>
                <form asp-controller="User" asp-action="Delete" method="post" asp-route-id="@item.User.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>

